{
  "name": "@brave-intl/currency",
  "version": "1.6.6",
  "description": "caches currency trade rates for synchronous access",
  "main": "index.js",
  "scripts": {
    "precommit": "npm test",
    "lint": "standard",
    "lint-fix": "npm run lint -- --fix",
    "security": "npm run lint && npm run moderate-audit",
    "moderate-audit": "npm audit --audit-level=moderate; echo $?",
    "test": "npm run lint && nyc ava"
  },
  "engines": {
    "node": ">=12",
    "npm": ">=6"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@hapi/boom": "^8.0.1",
    "@hapi/joi": "^15.1.1",
    "bignumber.js": "^9.0.1",
    "debug": "^4.3.1",
    "dotenv": "^6.1.0",
    "lodash": "^4.17.21",
    "node-binance-api": "^0.8.4",
    "oxr": "^1.1.2",
    "wreck": "^14.1.0"
  },
  "devDependencies": {
    "ava": "^5.2.0",
    "husky": "^0.14.3",
    "nyc": "^15.1.0",
    "standard": "^16.0.4"
  },
  "ava": {
    "concurrency": 1,
    "verbose": true,
    "files": [
      "*.test.js"
    ],
    "timeout": "20s"
  }
}
